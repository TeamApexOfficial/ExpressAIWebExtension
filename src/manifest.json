{
	"manifest_version": 3,
	"name": "Express AI",
	"version": "1.0.1",
	"description": "A Chrome extension that helps to convert text to speech with emotional tone.Copyright Â© 2025 Team Apex | All rights reserved.",
	"author": "Team Apex",
	"permissions": ["scripting", "activeTab"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	"icons": {
		"128": "icon.png",
		"48": "icon.png",
		"16": "icon.png"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	]
}
